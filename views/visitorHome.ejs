<html lang="en">
<title>Add Work</title>
<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        .row {
            margin: 0;
          }
           .navbar-default {
               height: 100px;
               padding-top: 23px;
               padding-left: 70px;
               border: 0;
               border-radius: 0 !important;
               background: #2c3e50;
           }
           .navbar-default .navbar-brand {
               text-transform: uppercase;
               font-size: 2em;
               text-decoration: none;
               color: white;
               transition: color 0.3s ease;
               cursor: pointer;
           }
           .navbar-default .navbar-brand:hover {
               color: #18bc9c;
               transition: color 0.3s ease;
           }
           .card {
               padding: 10px;
               padding-top: 20px;
               background: #18bc9c;
               border: 1px #c8c3ff solid;
               border-radius: 5px;
               text-align: center;
               margin: 10px 3% 1% 3%;
               height: 190px;
               width: calc(80% * (1/3));
           }
           .card .card-title {
             color: #02695e;
             font-size: 3em;
             font-weight: bold;
             text-transform: capitalize;
         }
         .card .card-title1 {
           color: #02695e;
           font-size: 2em;
           font-weight: bold;
           text-transform: capitalize;
       }
       .card .card-project {
         color: #02695e;
         font-size: 1em;
         font-weight: italic;
     }
         .card .card-link {
             margin-top: 40px;
             font-size: 1.1em;
             font-weight: bold;
             width: 90%;
             border: 2px solid white;
             color: white;
             background: transparent;
             transition: background-color 0.5s ease;
         }
         .card .card-link:hover {
             color: #18bc9c;
             background: white;
             transition: background-color 0.5s ease;
         }
         .form-container {
             height: 400px;
             border-left: 1px solid gray;
             padding-left: 30px;
         }
         .form-control {
             width: 90%;
         }
     </style>
 </head>

 <body>
     <nav class="navbar navbar-default">
         <div class="container-fluid">
             <form class="navbar-header" method="GET" action="/">
                 <button type="submit" class="navbar-brand">HOME</button>
            </form>
                 <a class="navbar-brand" href="#"> | </a>
                 <a class="navbar-brand">VISIT</button>
         </div>
     </nav>
     <div class="row">
         <div class="col-xs-12 col-md-8">
             <div class="row">
                 <% for(var i=0; i<students.length; i++){%>
                     <div class="card col-xs-4">
                         <h4 class="card-title"> <%= students[i].name %></h4>
                         <h5 class="card-title1"> <%= students[i].email %></h5>
                         <h6 class="card-project"> <%= students[i].studentProjects.length>0?students[i].studentProjects[0].title:"" %></h6>
                         <h6 class="card-project"> <%= students[i].studentProjects.length>1?students[i].studentProjects[1].title:"" %></h6>
                     </div>
                 <% } %>
             </div>
         </div>
                     <script language="Javascript">
                        function IsEmpty(){
                          if(document.getElementById('InputTitle').value == "")
                          {
                            alert("Title can't be empty");
                            return false;
                          }
                          else {
                            if(document.getElementById('InputImage').value == ""
                              &&document.getElementById('InputLink').value == ""
                              &&document.getElementById('InputCode').value == "")
                            {
                              alert("You must include a screenshot, a link or a code file to submit.");
                              return false;
                            }
                            else
                              return true;
                          }
                       }

                     </script>
                 </form>
             </div>
           </div>
       </div>

   </html>
